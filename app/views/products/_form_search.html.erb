<%= search_form_for(@q, url: root_path, method: :get, html: { class: "form-inline" }) do |f| %>
  <div class="form-group search-field">
    <%= f.label :name_cont, class: 'sr-only' %>
    <%= f.search_field :name_cont, class: "form-control mr-2", placeholder: "Name" %>
  </div>
  <div class="form-group search-field">
    <%= f.label :description_cont, class: 'sr-only' %>
    <%= f.search_field :description_cont, class: "form-control mr-2", placeholder: "Description" %>
  </div>
  <div class="form-group search-field">
    <%= f.label :product_category_id_eq, "Category", class: 'sr-only' %>
    <%= f.collection_select :product_category_id_eq, all_categories, :id, :name, include_blank: true %>
  </div>
  <div class="form-group search-field">
    <%= f.label :s, "Price", class: 'sr-only' %>
    <%= f.select :s, options_for_select(
        [
        ['Lowest to highest', 'price asc'],
        ['Highest to lowest', 'price desc']
        ],
        params.dig(:q, :s)
      ),
      {include_blank: true}, class: "form-select mr-2" 
    %>
  </div>
  <%= f.button "Search", type: :submit, class: "btn btn-primary" %>
<% end %>
